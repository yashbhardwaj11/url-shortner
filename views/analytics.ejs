<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>URL Analytics</title>
</head>

<body>
    <!-- Navbar with bg-primary class only -->
    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container-fluid d-flex justify-content-between">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container p-5">
        <h1 class="mb-4">Analytics for Short URL: <%= shortId %>
        </h1>

        <!-- Redirect URL and Total Clicks -->
        <div class="mb-4">
            <p><strong>Redirect URL:</strong> <a target="_blank"  href="<%= redirectURL %>" class="text-decoration-none">
                    <%= redirectURL %>
                </a></p>
            <p><strong>Short URL:</strong> <a  target="_blank" href="/<%= shortId %>" class="text-decoration-none">
                http://localhost:3000/<%= shortId %>
                </a></p>
            <p><strong>Total Clicks:</strong>
                <%= totalClicks %>
            </p>
        </div>

        <!-- Visit History Section -->
        <div>
            <h3 class="mb-3">Visit History:</h3>
            <div class="row">
                <% visitHistory.forEach(visit=> { %>
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <p class="mb-2"><strong>Timestamp:</strong>
                                    <%= new Date(visit.timestamp).toLocaleString() %>
                                </p>
                                <p class="mb-2"><strong>IP Address:</strong>
                                    <%= visit.ip || "N/A" %>
                                </p>
                                <p class="mb-2"><strong>Browser:</strong>
                                    <%= visit.browser || "N/A" %>
                                </p>
                                <p class="mb-2"><strong>Operating System:</strong>
                                    <%= visit.operatingSystem || "N/A" %>
                                </p>
                                <p class="mb-0"><strong>Device Type:</strong>
                                    <%= visit.deviceType || "N/A" %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>